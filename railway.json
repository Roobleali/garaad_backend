{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
  },
  "deploy": {
    "startCommand": "sh -c 'gunicorn --bind 0.0.0.0:8000 --workers 3 --timeout 120 --access-logfile - --error-logfile - --log-level debug --capture-output --enable-stdio-inheritance --forwarded-allow-ips=\"*\" garaad.wsgi:application'"
  },
  "variables": {
    "DEBUG": "False",
    "ALLOWED_HOSTS": "garaadbackend-production.up.railway.app",
    "CORS_ALLOWED_ORIGINS": "https://garaadbackend-production.up.railway.app",
    "PYTHONUNBUFFERED": "1",
    "DJANGO_SETTINGS_MODULE": "garaad.settings",
    "PYTHONDONTWRITEBYTECODE": "1"
  }
}
