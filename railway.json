{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
  },
  "deploy": {
    "startCommand": "sh -c 'gunicorn --bind 0.0.0.0:8000 --workers 3 --timeout 120 --access-logfile - --error-logfile - --log-level debug --capture-output --enable-stdio-inheritance garaad.wsgi:application'",
    "healthcheckPath": "/health/",
    "healthcheckTimeout": 200,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckInterval": 30
  },
  "variables": {
    "DEBUG": "False",
    "ALLOWED_HOSTS": "*",
    "CORS_ALLOWED_ORIGINS": "https://*.railway.app",
    "PYTHONUNBUFFERED": "1",
    "DJANGO_SETTINGS_MODULE": "garaad.settings",
    "PYTHONDONTWRITEBYTECODE": "1"
  }
}
